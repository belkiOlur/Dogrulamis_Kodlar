@{
    ViewData["Title"] = "Home Page";
    var alert = "Bu Bir Uyarı Mesajıdır";
}

<div class="text-center">
    <h1 class="display-4">Welcome</h1>
    <p>Learn about <a href="https://docs.microsoft.com/aspnet/core">building Web apps with ASP.NET Core</a>.</p>
</div>

<div style="color:red;">Günün Tarihi: @DateTime.Now.ToShortDateString()</div>
@{
    var datetime = DateTime.Now.ToShortDateString();
    var message = "Merhaba";

    @: Bugünün tarihi : @datetime
    <div>Mesaj : @message</div>
    <text>Beril ve Bade : @message</text>

}

@if (1==1)
{
    <p>Doğru</p>
}
else if(DateTime.IsLeapYear(DateTime.Now.Year))
{
    <p>Artık Yıl</p>
}
else
{
    <h1>@alert</h1>
    <p>Yanlış</p>

}

@for (var i = 0; i < 10; i++)
{
    <p>@i</p>
}

@foreach (var item in Enumerable.Range(1,10).ToList())
{
    <p>@item</p>
}